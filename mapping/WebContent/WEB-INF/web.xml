	<servlet>
		<servlet-name>TestController</servlet-name>
		<servlet-class>com.mapp.bdi.controller.TestController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>TestController</servlet-name>
		<url-pattern>/test/*</url-pattern>
	</servlet-mapping>
		<servlet>
		<servlet-name>URIContorller</servlet-name>
		<servlet-class>com.mapp.bdi.controller.URIContorller</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>URIContorller</servlet-name>
		<url-pattern>/uri/*</url-pattern>
	</servlet-mapping>
</web-app>